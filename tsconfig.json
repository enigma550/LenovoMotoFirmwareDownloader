{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "electrobun": ["types/electrobun/index.d.ts"],
      "electrobun/bun": ["types/electrobun/bun.d.ts"],
      "electrobun/view": ["types/electrobun/view.d.ts"],
    },
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
  },
  "exclude": ["dist", "node_modules", "fproj", "electrobun.config.ts"],
}
